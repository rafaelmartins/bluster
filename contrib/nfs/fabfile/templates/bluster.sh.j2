#!/bin/bash

export BLUSTER_GIST_ID="{{ gist_id }}"
{% if gist_ttl -%}
export BLUSTER_GIST_TTL={{ gist_ttl }}
{%- endif %}
{% if oauth_token -%}
export BLUSTER_OAUTH_TOKEN="{{ oauth_token }}"
{%- endif %}

exec {{ prefix }}/bin/bluster -f -p 8080{% if fastcgi_threads %} -m {{ fastcgi_threads }}{% endif %}

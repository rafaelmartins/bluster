#ifdef HAVE_CONFIG_H
#include <config.h>
#endif /* HAVE_CONFIG_H */

#include <glib.h>

#include "utils.h"


gchar*
load_fixture(const gchar *fixture)
{
    gchar *contents;
    gchar *f = g_build_filename("@abs_top_srcdir@", "tests", "fixtures", fixture, NULL);
    gboolean success = g_file_get_contents(f, &contents, NULL, NULL);
    g_free(f);
    if (!success)
        return NULL;
    return contents;
}
